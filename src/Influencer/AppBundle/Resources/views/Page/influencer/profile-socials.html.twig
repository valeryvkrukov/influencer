<div class="full-height margin-10">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4>Social accounts</h4>
		</div>
		<div class="panel-content" flow-init>
			<div class="padding-20">
	        	<form role="form" name="socialsInfluencerInfo">
	        		<div class="row">
    	        		<div class="col-md-7">
    	        			<div class="row" ng-repeat="network in networks">
        						<div class="col-sm-10">
									<br>
									<div class="input-group" style="width:100%;">
            							<a ng-click="refreshFeed(network.tag)" class="btn btn-block" ng-class="{'btn-primary':(user[network.tag] == null), 'btn-success':(user[network.tag] != null)}">
        									<span class="pull-left">
        										<i class="fa fa-{{ '{{ network.tag }}' }}"></i>
        									</span> 
        									<span>{{ '{{ network.name }}' }}</span>
        									<span ng-if="user[network.tag]" class="pull-right"> Connected (click to refresh feed) <i class="fa fa-check"></i></span>
        									<span ng-if="!user[network.tag]" class="pull-right"> Not Connected <i class="fa fa-times"></i></span>
        								</a>
        							</div>
        							<br>
        						</div>
        					</div>
        					<div class="row">
        						<div class="col-sm-10">
        							<h4>Klout settings</h4>
        							<div pg-form-group class="form-group form-group-default">
        								<label>Klout ID</label>
        								<input type="text" name="klout" placeholder="Klout ID" class="form-control" ng-model="user.klout">
        							</div>
        						</div>
        					</div>
        					<div class="row">
        						<div class="col-sm-6">
                					<button ng-click="updateProfileField('klout')" class="btn btn-primary btn-cons">
                    					<span>Save Changes</span>
                    				</button>
                    			</div>
                    		</div>
    	        		</div>
    	        	</div>
    	        </form>
    	    </div>
    	</div>
	</div>
</div>