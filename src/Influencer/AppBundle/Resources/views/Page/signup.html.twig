            								<strong>{{ '{{ pt.name }}' }}:</strong> ${{ '{{ user.prices[pt.tag] }}' }}
            							</p>
            							<p ng-if="user.frequency"><strong>Frequency:</strong> {{ '{{ user.frequency }}' }}</p>
                						<p ng-if="user.bio">
                							<strong>Bio:</strong><br>
                							<span>{{ '{{ user.bio }}' }}</span>
                						</p>
