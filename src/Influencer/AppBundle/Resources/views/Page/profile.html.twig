<div class="social-wrapper" ng-controller="ProfileCtrl" ng-init="loadFeeds()">
	<div class="social " data-pages="social">
		<div class="jumbotron" data-pages="parallax" data-social="cover" flow-init flow-file-added="changeCover($file, $event, $flow)">
        	<div class="cover-photo">
        		<img ng-if="!$flow.files[0] && !user.profileCover" alt="Cover photo" src="{{ asset('img/cover.png') }}">
        		<img ng-if="user.profileCover" alt="Cover photo" ng-src="{{ '{{ user.profileCover }}' }}" style="display:block;">
        		<img ng-if="$flow.files[0]" alt="Cover photo" flow-img="$flow.files[0]">
        	</div>
        	<div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
        		<div class="inner">
        			<div class="pull-bottom bottom-left m-b-40">
        				<h5 class="text-white no-margin">welcome to your Influence profile</h5>
        				<h1 class="text-white no-margin"><span class="semi-bold">{{ '{{ user.firstName }}' }}</span> {{ '{{ user.lastName }}' }}</h1>
        				<span flow-btn class="pull-right text-white"><i class="fa fa-pencil fs-16 m-t-10"></i> change cover</span>
        			</div>
        		</div>
        	</div>
        </div>
        
        <div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
