    			<div ng-repeat="item in feeds.instagram" class="card share share-self col1 wide m-t-10 m-l-10 m-r-10 m-b-10" data-social="item">
    				<div class="circle" data-toggle="tooltip" title="Label"></div>
    				<div class="card-header clearfix">
    					<h5><i class="social-icon fa fa-instagram"></i> {{ '{{ item.title }}' }}</h5>
    				</div>
    				<div class="card-description">
    					<a href="{{ '{{ item.link }}' }}">Original link</a>
    				</div>
    				<div class="card-content">
    					<img alt="Social post" ng-src="{{ '{{ item.picture }}' }}">
    				</div>
    				<div class="card-footer clearfix">
    					<div class="time">{{ '{{ item.createdAt.date|datetime }}' }}</div>
    					<ul class="reactions">
    						<li><a href="#">{{ '{{ item.comments }}' }} <i class="fa fa-comment-o"></i></a></li>
    						<li><a href="#">{{ '{{ item.likes }}' }} <i class="fa fa-heart-o"></i></a></li>
    					</ul>
    				</div>
    			</div>
    		</div>
			<div ng-class="{'col-md-3': sizeOf(feeds) == 4, 'col-md-4': sizeOf(feeds) == 3, 'col-md-6': sizeOf(feeds) == 2, 'col-md-12': sizeOf(feeds) == 1}">
				<h3>Google</h3>
