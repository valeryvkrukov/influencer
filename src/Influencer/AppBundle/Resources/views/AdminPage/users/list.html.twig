<div class="container-fluid container-fixed-lg">
	<ul class="breadcrumb">
		<li><p>users</p></li>
		<li><a href="#" class="active">list</a></li>
	</ul>
</div>

<div class="container-fluid no-margin full-width bg-white">
	<div class="row full-height no-margin">
		<div class="col-md-12 no-padding full-height">
			<div class="panel panel-transparent">
				<div class="panel-heading">
					<div class="panel-title"><h4>Users List</h4></div>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-12">
							<ul class="nav nav-tabs nav-tabs-simple">
								<li ng-class="{'active': filteredBy == 'all'}">
									<a ng-click="filterData('role', 'all', dtInstance)">All</a>
								</li>
								<li ng-class="{'active': filteredBy == 'ROLE_CLIENT'}">
									<a ng-click="filterData('role', 'ROLE_CLIENT', dtInstance)">Clients</a>
								</li>
								<li ng-class="{'active': filteredBy == 'ROLE_INFLUENCER'}">
									<a ng-click="filterData('role', 'ROLE_INFLUENCER', dtInstance)">Influencers</a>
								</li>
								<li ng-class="{'active': filteredBy == 1}">
									<a ng-click="filterData('enabled', 1, dtInstance)">Enabled</a>
								</li>
								<li ng-class="{'active': filteredBy == 0}">
									<a ng-click="filterData('enabled', 0, dtInstance)">Disabled</a>
								</li>
							</ul>
						</div>
					</div>
					<table datatable="" dt-options="dtOptions" dt-columns="dtColumns" dt-instance="dtInstance" class="table table-striped table-bordered"></table>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade slide-up disable-scroll" id="deleteUser" tabindex="-1" role="dialog" aria-labelledby="deleteUserLabel" aria-hidden="false">
	<div class="modal-dialog">
		<div class="modal-content-wrapper">
			<div class="modal-content">
				<div class="modal-header clearfix text-left">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="pg-close fs-14"></i></button>
					<h5>Delete user <span class="semi-bold">{{ '{{ selectedForDelete.firstName }} {{ selectedForDelete.lastName }}' }}</span></h5>
				</div>
				<div class="modal-body">
					<h3>Are you sure?</h3>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="deleteUser(selectedForDelete, dtInstance)"">Yes, remove</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				</div>
			</div>
		</div>
	</div>
</div>